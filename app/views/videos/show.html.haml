%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        =image_tag @video.large_cover_url
      .video_info.col-sm-3
        %header
          %h3= @video.title
          %span Rating: 4.5/5.0
        %p= @video.description
        .actions
          %a.btn.btn-primary(href="") Watch Now
          %a.btn.btn-default(href="") + My Queue

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @review do |f| 
        %fieldset
          .form-group
            .row
              .col-sm-3
                = f.select :rating, [['5 Stars', 5], ['4 Stars', 4], ['3 Stars', 3], ['2 Stars', 2], ['1 Star', 1]], { label: "Rate this video" }, { class: "form-control" }
          .form-group
            .row
              .col-sm-8
                = f.text_area :body, rows: 6, label: "Write Review"
        %fieldset.form-group.actions.clearfix
          = f.submit "Submit", class: "btn"
          %a(href="") Cancel
      %header
        %h3 User Reviews (#{@reviews.count})
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %span Rating: #{review.rating} / 5
                %p by <a href="">#{review.user.name}</a>
              .col-sm-8
                %p= review.body
          

