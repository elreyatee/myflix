%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, url: register_path, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6" do |f|
        %header
          %h1 Register
        %fieldset
          = f.email_field :email, label: "Email Address", placeholder: 'Email'
          = f.password_field :password, label: "Password", placeholder: 'Password'
          = f.text_field :name, label: "Full Name"
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            = f.submit "Sign Up"
          